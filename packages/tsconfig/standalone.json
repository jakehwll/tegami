{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Standalone",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "noEmit": false,
    "sourceMap": false,
    "strict": true,
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
